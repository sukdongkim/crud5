<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #431ad9;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="phone.controller.PizzaMainController">
   <children>
      <HBox alignment="CENTER" layoutX="10.0" layoutY="36.0" prefHeight="68.0" prefWidth="600.0" spacing="50.0" style="-fx-border-color: brown; -fx-border-width: 3;">
         <children>
            <Button mnemonicParsing="false" onAction="#onClickLogin" prefHeight="45.0" prefWidth="220.0" style="-fx-background-color: brown;" text="Login" textFill="#e7ebe8">
               <font>
                  <Font name="Times New Roman Bold" size="30.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#onClicksignup" prefHeight="45.0" prefWidth="220.0" style="-fx-background-color: #4e5a51;" text="SignUp" textFill="#edf2f1">
               <font>
                  <Font name="Times New Roman Bold" size="30.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <AnchorPane fx:id="pane_login" layoutX="6.0" layoutY="119.0" prefHeight="297.0" prefWidth="600.0">
         <children>
            <TextField fx:id="txt_username" layoutX="280.0" layoutY="28.0" prefHeight="40.0" prefWidth="282.0" promptText="Enter UserName" />
            <Button fx:id="btn_login" layoutX="32.0" layoutY="218.0" mnemonicParsing="false" onAction="#Login" prefHeight="47.0" prefWidth="530.0" style="-fx-background-color: brown;" text="Login" textFill="#fff9f9">
               <font>
                  <Font name="Times New Roman" size="26.0" />
               </font>
            </Button>
            <TextField fx:id="txt_phone" layoutX="280.0" layoutY="90.0" prefHeight="40.0" prefWidth="282.0" promptText="Enter PhoneNumber" />
            <TextField fx:id="txt_address" editable="false" layoutX="280.0" layoutY="157.0" prefHeight="40.0" prefWidth="282.0" promptText="Address " />
            <ImageView fitHeight="175.0" fitWidth="220.0" layoutX="70.0" layoutY="23.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/pizza.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
      <AnchorPane fx:id="pane_signup" layoutX="8.0" layoutY="115.0" prefHeight="297.0" prefWidth="594.0" visible="false">
         <children>
            <TextField fx:id="txt_username_up" layoutX="214.0" layoutY="71.0" prefHeight="30.0" prefWidth="200.0" promptText="Enter Username" />
            <TextField fx:id="txt_phone_up" layoutX="214.0" layoutY="115.0" prefHeight="30.0" prefWidth="200.0" promptText="Enter PhoneNumber" />
            <TextField fx:id="txt_address_up" layoutX="214.0" layoutY="158.0" prefHeight="30.0" prefWidth="357.0" promptText="Enter Your Address" />
            <ComboBox fx:id="type_up" layoutX="214.0" layoutY="28.0" prefHeight="30.0" prefWidth="200.0" promptText="Choice Type" />
            <Button layoutX="26.0" layoutY="210.0" mnemonicParsing="false" onAction="#add_users" prefHeight="54.0" prefWidth="548.0" style="-fx-background-color: #4e5a51;" text="SignUp" textFill="#f8f3f3">
               <font>
                  <Font name="Times New Roman Bold" size="30.0" />
               </font>
            </Button>
            <ImageView fitHeight="165.0" fitWidth="170.0" layoutX="35.0" layoutY="28.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/pizza.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
